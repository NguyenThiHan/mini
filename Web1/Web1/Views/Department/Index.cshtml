@model Web1.Models.IndexDepartment

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_home.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">List Department</h4>
        <br />
        <a href="@Url.Action("CreateDepartment","Department")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Add Department</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Code Id</th>
                        <th>Department Name</th>
                        <th>Address</th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.departments)
                    {
                        <tr>
                            <td>
                                @item.DepartmentId
                            </td>
                            <td>
                                @item.DepartmentName
                            </td>
                            <td>
                                @item.DepartmentAddress
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditDepartment", new { id = item.DepartmentId }) |
                                @Html.ActionLink("Details", "DetailsDepartment", new { id = item.DepartmentId }) |
                                @Html.ActionLink("Delete", "DeleteDepartment", new { id = item.DepartmentId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
