@model Web1.Models.IndexModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_home.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">List Position</h4>
        <br />
        <a href="@Url.Action("AddPosition","Position")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Add Position</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>EmployeeId</th>
                        <th>DepartmentId</th>
                        <th>Position Name</th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.positions)
                    {
                        <tr>
                            <td>
                                @item.EmployeeFullName
                            </td>
                            <td>
                                @item.DepartmentName
                            </td>
                            <td>
                                @item.PositionName
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditPosition", new {empId=item.EmployeeId , depaId=item.DepartmentId }) |
                                @Html.ActionLink("Details", "DetailsPosition", new { empId = item.EmployeeId, depaId = item.DepartmentId }) |
                                @Html.ActionLink("Delete", "DeletePosition", new { empId = item.EmployeeId, depaId = item.DepartmentId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
