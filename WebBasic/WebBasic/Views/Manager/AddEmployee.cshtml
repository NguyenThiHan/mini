@model WebBasic.Models.Employee

@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddEmployee</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
